<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card text-white bg-success mb-3">
                <div class="card-header"><i class="fas fa-dollar-sign"></i> Curent Month Treasury</div>
                <div class="card-body">
                    
                    <h5 class="card-title">{{ TreasuryInfos.treasury }}</h5>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card text-black-50 bg-light mb-3">
                <div class="card-header"><i class="fas fa-plus"></i> Number of inputs</div>
                <div class="card-body">
                    <h5 class="card-title">{{ TreasuryInfos.countInputs }}</h5>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card text-black-50 bg-light mb-3">
                <div class="card-header"><i class="fas fa-minus"></i> Number of outputs</div>
                <div class="card-body">
                    <h5 class="card-title">{{ TreasuryInfos.countOutputs }}</h5>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th {% if transactions.isSorted("title") %} class="sorted"{% endif %}>{{ knp_pagination_sortable(transactions, "title"|trans|capitalize, "title") }}</th>
        <th {% if transactions.isSorted("amount") %} class="sorted"{% endif %}>{{ knp_pagination_sortable(transactions, "amount"|trans|capitalize, "amount") }}</th>
        <th {% if transactions.isSorted("isInput") %} class="sorted"{% endif %}>{{ knp_pagination_sortable(transactions, "type"|trans|capitalize, "isInput") }}</th>
        <th>{{ "description"|trans|capitalize }}</th>
        <th {% if transactions.isSorted("isValid") %} class="sorted"{% endif %}>{{ knp_pagination_sortable(transactions, "isValid"|trans|capitalize, "isValid") }}</th>
        <th>{{ "category"|trans|capitalize }}</th>
        <th>{{ "tags"|trans|capitalize }}</th>
        <th>{{ "Actions"|trans({}) }}</th>
    </tr>
    </thead>
    <tbody>
    {% include 'transaction/transactionData.html.twig' with {'transactions': transactions} %}
    </tbody>
</table>
<div class="navigation">
    {{ knp_pagination_render(transactions) }}
</div>
